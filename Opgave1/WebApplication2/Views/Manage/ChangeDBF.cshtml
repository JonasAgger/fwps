@model WebApplication2.Models.ChangeDBFViewModel
@{
    ViewBag.Title = "Skift DBF";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeDBF", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "textForm" }))
{
    @Html.AntiForgeryToken()
    <h4>Skift dit DBF kontrolnummer</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.DBF, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DBF, new { @class = "form-control", @maxlength = "5"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
